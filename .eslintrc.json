{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "classes": true,
            "defaultParams": true
        }
    },
    "rules": {
        "no-const-assign": 1,
        "no-extra-semi": 1,
        "semi": 1,
        "no-fallthrough": 1,
        "no-empty": 1,
        "no-mixed-spaces-and-tabs": 0,
        "no-redeclare": 1,
        "no-this-before-super": 1,
        "no-undef": 1,
        "no-unreachable": 1,
        "no-use-before-define": 1,
        "constructor-super": 1,
        "curly": 1,
        "eqeqeq": 1,
        "func-names": 1,
        "valid-typeof": 1,
        "callback-return": 1,
        "handle-callback-err": 1
    }
}